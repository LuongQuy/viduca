<%- include('./layouts-teacher/header') %>
    <form class="form-inline" method="POST" action="">
        <div class="form-group mx-sm-3 mb-2">
            <label for="email" class="sr-only">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email người học">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Thêm</button>
    </form>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Tasks</th>
            </tr>
        </thead>
        <tbody>
            <% learners.forEach(learner => { %>
            <tr>
                <td><%= learner.info.lastname %> <%= learner.info.firstname %></td>
                <td><%= learner.local.email %></td>
                <td> 
                    <form action="/teacher/delete-learner?courseID=<%= course._id %>&learnerDelID=<%= learner._id %>" method="post">
                        <input type="submit" name="" id="" value="Delete">
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<%- include('./layouts-teacher/footer') %>