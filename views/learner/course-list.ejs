<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Course list</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="shortcut icon" type="image/png" href="/course/images/icon/favicon.ico"> -->
    <link rel="stylesheet" href="../stylesheets/bootstrap4.0.0.min.css">
    <link rel="stylesheet" href="../for-course-page/css/font-awesome.min.css">
    <link rel="stylesheet" href="../for-course-page/css/styles.css">
    <link rel="stylesheet" href="../for-course-page/css/metisMenu.css">
    <link rel="stylesheet" href="../for-course-page/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../for-course-page/css/slicknav.min.css">
    <link rel="stylesheet" href="../for-course-page/css/themify-icons.css">
    <link rel="stylesheet" href="../for-course-page/css/typography.css">
    <style>
        a {
            text-decoration: none !important;
        }

        div.gallery {
            margin: 5px !important;
            border: 1px solid #ccc !important;
            float: left !important;
            width: 180px !important;
            padding: 0px !important;
        }

        div.gallery:hover {
            border: 1px solid #777 !important;
        }

        div.gallery img {
            width: 100% !important;
            height: auto !important;
        }

        div.desc {
            padding: 15px !important;
            text-align: center !important;
        }
    </style>
</head>

<body class="body-bg">
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- main wrapper start -->
    <div class="horizontal-main-wrapper">
        <!-- main header area start -->
        <%- include('../layouts/header') %>
        <!-- main header area end -->
        <!-- header area start -->
        <div class="header-area header-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9  d-none d-lg-block">
                        <div class="horizontal-menu">
                            <nav>
                                <ul id="nav_menu">
                                    <li>
                                        <a href="javascript:void(0)">
                                            <i class="ti-dashboard"></i>
                                            <span>dashboard</span>
                                        </a>
                                    </li>
                                    <li class="active">
                                        <a href="javascript:void(0)">
                                            <i class="ti-layout-sidebar-left"></i>
                                            <span>Sidebar Types
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">
                                            <i class="ti-pie-chart"></i>
                                            <span>Charts</span>
                                        </a>

                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <!-- nav and search button -->
                    <div class="col-lg-3 clearfix">
                        <div class="search-box">
                            <form action="#">
                                <input type="text" name="search" placeholder="Search..." required>
                                <i class="ti-search"></i>
                            </form>
                        </div>
                    </div>
                    <!-- mobile_menu -->
                    <div class="col-12 d-block d-lg-none">
                        <div id="mobile_menu"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header area end -->
        <!-- page title area end -->
        <div class="main-content-inner">
            <div class="container">
                <div class="row" style="margin: 25px 15px 25px 15px">
                    <% courses.forEach(function(course){ %>
                        <div class="gallery center col-md-2">
                                <a target="_blank" href="/learner/classroom?courseID=<%= course.courseId %>" style="color:black">
                                    <img src="../images/avatar-course.jpg" alt="Forest" width="300" height="200">
                                    <div style="margin: 15px 15px 15px 15px">
                                        <font style="font-size: 15">
                                            <b><%= course.name %></b>
                                        </font>
                                        <br>
                                        <font style="font-size: 13"><%= course.description %>
                                        </font>
                                        <br>
                                        <font style="font-size: 13">
                                            <b>Instructor:</b> <%= course.instructorName %></font>
                                    </div>
                                </a>
                            </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <!-- main content area end -->
    </div>
    <script src="../javascripts/jquery.min.js"></script>
    <script src="../for-course-page/js/popper.min.js"></script>
    <script src="../javascripts/bootstrap.min.js"></script>
    <script src="../for-course-page/js/jquery.slicknav.min.js"></script>
    <script src="../for-course-page/js/jquery.slimscroll.min.js"></script>
    <script src="../for-course-page/js/metisMenu.min.js"></script>
    <!-- <script src="../javascripts/scripts.js"></script> -->
    
</body>

</html>